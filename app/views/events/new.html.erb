<h1>Create a new event</h1>
<%= form_for @event do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <%= f.label :date %>
  <%= f.datetime_local_field :date, value:Time.now.strftime('%Y-%m-%dT%H:%M') %><br>
  <%= f.label :location %>
  <%= f.text_field :location %><br>
  <%= f.label :description %>
  <%= f.text_area :description %><br>
  <%= f.submit "Create Event" %>
<% end %>