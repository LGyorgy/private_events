<h1><%= @event.title %></h1>
<% if current_user == @event.creator %>
  <%= link_to "Invite a User" , new_invitation_path(@event.id) %>
<% end %>
<p>Location: <%= @event.location %></p>
<p>Date: <%= @event.date %></p>
<p>Description: <%= @event.description %></p>
<p>
  <%= "Event created by: " %>
  <%= link_to @event.creator.name, user_path(@event.creator) %>
<h2>Attendees:</h2>
<% if @event.attendees.any? %>
  <ul>
    <% @event.attendees.each do |attendee| %>
      <li><%= link_to attendee.name, user_path(attendee) %></li>
    <% end %>
  </ul>
<% else %>
  No attendees yet :(
<% end %>

<h2>Pending invitations:</h2>
<% if @event.invited_users.any? %>
  <ul>
    <% @event.invited_users.each do |attendee| %>
      <li><%= link_to attendee.name, user_path(attendee) %></li>
    <% end %>
  </ul>
<% else %>
  No pending invitations
<% end %>